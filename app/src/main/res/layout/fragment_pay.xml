                android:layout_height="41dp"
                android:background="@drawable/bg_recharge_amount"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="输入金额"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/font_small" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@color/black" />

                <EditText
                    android:id="@+id/etMoney"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="填入您要充值的金额"
                    android:inputType="number"
                    android:textColor="@color/gray_999"
                    android:textSize="@dimen/font_small" />

            </LinearLayout>

            <TextView
                android:id="@+id/tvHit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="1元可兑换10个积分"
                android:textColor="@color/gray_999"
                android:textSize="@dimen/font_smaller" />

            <TextView
                android:id="@+id/tvMoney"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_bg_blue_radius_25dp"
                android:foreground="?attr/selectableItemBackground"
                android:gravity="center"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="立即充值"
                android:textColor="@color/aliceBlue" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="41dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_recharge_amount"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:text="输入卡密"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/font_small"
                    tools:ignore="SpUsage" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@color/black" />

                <EditText
                    android:id="@+id/etCardPassword"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="输入或粘贴密码"
                    android:textColor="@color/gray_999"
                    android:textSize="@dimen/font_small"
                    tools:ignore="SpUsage" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="15dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="卡密购买链接："
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/font_smaller"
                    tools:ignore="SpUsage" />

                <TextView
                    android:id="@+id/tvOnlinePay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="戳我去购买 >"
                    android:textColor="@color/hotPink"
                    android:textSize="@dimen/font_smaller"
                    tools:ignore="SpUsage" />
            </LinearLayout>


            <TextView
