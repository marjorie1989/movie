<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/dp_10"
    android:background="@drawable/bg_day5"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/item_iv_card_child_icon"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:contentDescription="@string/iv" />

        <TextView
            android:id="@+id/item_tv_card_child_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:background="#00FFFFFF"
            android:gravity="center"
            android:includeFontPadding="false"
            android:textColor="@color/white"
            android:textSize="@dimen/font_smaller"
            tools:text="@string/tip" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|end">

        </LinearLayout>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/item_tv_card_child_up_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:ellipsize="end"
            android:layout_marginBottom="10dp"
            android:gravity="center|end"
            android:includeFontPadding="false"
            android:padding="5dp"
            android:singleLine="true"
            android:text="@string/up_title"
            android:textColor="@color/white"
            android:textSize="@dimen/font_smaller" />

    </FrameLayout>


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/item_tv_card_child_title"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="-12dp"
        android:ellipsize="end"
        android:layout_marginRight="2.3dp"
        android:layout_marginLeft="2.3dp"
        android:paddingTop="5dp"
        android:singleLine="false"
        android:background="#fff"
        android:textColor="@color/textColor"
        android:textSize="14dp"
        android:visibility="visible"
        tools:text="风语咒风语咒风语咒风语咒风语咒风语咒风语咒风语咒风语语咒风语咒风语咒" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/item_tv_card_child_vod_blurb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="1dp"
        android:ellipsize="end"
        android:gravity="center|start"
        android:includeFontPadding="false"
        android:singleLine="true"
        android:textColor="@color/gray_999"
        android:textSize="12sp"
        android:visibility="visible"
        app:autoSizeTextType="uniform"
        tools:text="风语咒" />

</LinearLayout>