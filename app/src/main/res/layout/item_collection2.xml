<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="2dp"
    android:layout_marginTop="6dp"
    android:layout_marginBottom="9dp"
    android:gravity="center_vertical"
    app:cardCornerRadius="10dp"
    app:cardElevation="10dp"
    android:orientation="horizontal">


    <RelativeLayout
        android:layout_width="143dp"

        android:layout_height="185dp">

        <ImageView
            android:id="@+id/ivImg"
            android:layout_width="160dp"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            tools:background="#00BFA5" />

        <TextView
            android:id="@+id/item_update_tag"
            android:layout_width="33dp"
            android:layout_height="33dp"

            android:gravity="top|center_horizontal"
            android:text="私"
            android:textColor="#ECB1B1"
            android:textSize="22sp"
            android:visibility="visible"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/update_seri"
            android:layout_width="120dp"
            android:layout_height="70dp"
            android:layout_alignBottom="@+id/ivImg"
            android:background="@drawable/item_gradient_shape"
            android:ellipsize="end"
            android:gravity="bottom|right"
            android:maxLines="1"
            android:paddingLeft="2dp"
            android:paddingRight="12dp"
            android:paddingBottom="6dp"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:visibility="invisible"
            tools:text="测试更新文本" />

        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ivImg"
            android:layout_gravity="bottom|left"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:ellipsize="marquee"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="bottom"
            android:marqueeRepeatLimit="marquee_forever"
            android:paddingLeft="6dp"
            android:singleLine="true"
            android:text="电影名字"
            android:textColor="#750075"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvName"
            android:layout_alignLeft="@+id/ivImg"
            android:layout_gravity="bottom|right"
            android:layout_marginBottom="@dimen/dp_10"
            android:ellipsize="end"
            android:gravity="center"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:singleLine="true"
            android:textColor="#CBCACA"
            android:textSize="12sp"
            android:visibility="invisible"
            tools:text="2018-5-9上映" />
    </RelativeLayout>
</androidx.cardview.widget.CardView >